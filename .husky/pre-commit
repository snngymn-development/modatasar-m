#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting
echo "🔍 Running ESLint..."
npm run lint

# Run type checking
echo "🔍 Running TypeScript check..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm run test

# Run Prettier check
echo "💅 Running Prettier check..."
npm run format:check

echo "✅ Pre-commit checks passed!"
